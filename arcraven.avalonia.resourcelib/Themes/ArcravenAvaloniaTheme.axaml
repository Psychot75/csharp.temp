        <SolidColorBrush x:Key="Arc.SecondaryTextBrush"
                         Color="{StaticResource Arc.SecondaryTextColor}" />
        <SolidColorBrush x:Key="Arc.MutedTextBrush"
                         Color="{StaticResource Arc.MutedTextColor}" />
        <SolidColorBrush x:Key="Arc.ErrorTextBrush"
                         Color="{StaticResource Arc.ErrorTextColor}" />

        <SolidColorBrush x:Key="Arc.AccentPrimaryBrush"
                         Color="{StaticResource Arc.AccentPrimaryColor}" />
        <SolidColorBrush x:Key="Arc.AccentPrimaryHoverBrush"
                         Color="{StaticResource Arc.AccentPrimaryHoverColor}" />
        <SolidColorBrush x:Key="Arc.AccentPrimaryPressedBrush"
                         Color="{StaticResource Arc.AccentPrimaryPressedColor}" />
        <SolidColorBrush x:Key="Arc.AccentPrimaryMutedBrush"
                         Color="{StaticResource Arc.AccentPrimaryMutedColor}" />
        
        <SolidColorBrush x:Key="Arc.AccentSecondaryBrush"
                         Color="{StaticResource Arc.AccentSecondaryColor}" />
        <SolidColorBrush x:Key="Arc.AccentSecondaryHoverBrush"
                         Color="{StaticResource Arc.AccentSecondaryHoverColor}" />
        <SolidColorBrush x:Key="Arc.AccentSecondaryPressedBrush"
                         Color="{StaticResource Arc.AccentSecondaryPressedColor}" />
        <SolidColorBrush x:Key="Arc.AccentSecondaryMutedBrush"
                         Color="{StaticResource Arc.AccentSecondaryMutedColor}" />
        
        <SolidColorBrush x:Key="Arc.AccentTertiaryBrush"
                         Color="{StaticResource Arc.AccentTertiaryColor}" />
        <SolidColorBrush x:Key="Arc.AccentTertiaryHoverBrush"
                         Color="{StaticResource Arc.AccentTertiaryHoverColor}" />
        <SolidColorBrush x:Key="Arc.AccentTertiaryPressedBrush"
                         Color="{StaticResource Arc.AccentTertiaryPressedColor}" />
        <SolidColorBrush x:Key="Arc.AccentTertiaryMutedBrush"
                         Color="{StaticResource Arc.AccentTertiaryMutedColor}" />

        <SolidColorBrush x:Key="Arc.AccentErrorBrush"
                         Color="{StaticResource Arc.AccentErrorColor}" />
        <SolidColorBrush x:Key="Arc.AccentErrorHoverBrush"
                         Color="{StaticResource Arc.AccentErrorHoverColor}" />
        <SolidColorBrush x:Key="Arc.AccentErrorPressedBrush"
                         Color="{StaticResource Arc.AccentErrorPressedColor}" />
        <SolidColorBrush x:Key="Arc.AccentErrorMutedBrush"
