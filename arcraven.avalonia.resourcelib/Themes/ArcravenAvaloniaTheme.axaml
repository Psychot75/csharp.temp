                         Color="{StaticResource Arc.BaseBackgroundColor}" />
        <SolidColorBrush x:Key="Arc.PanelBackgroundBrush"
                         Color="{StaticResource Arc.PanelBackgroundColor}" />
        <SolidColorBrush x:Key="Arc.PanelHeaderBrush"
                         Color="{StaticResource Arc.PanelHeaderColor}" />
        <SolidColorBrush x:Key="Arc.PanelBorderBrush"
