        <SolidColorBrush x:Key="Arc.TransparentBrush" Color="#00FFFFFF" />
    </Styles.Resources>
    
    <!-- =========================
         WINDOW / ROOT
         ========================= -->

    <!-- Apply with Classes="arc-shellwindow" on your Window -->
    <Style Selector="Window.arc-shellwindow">
        <Setter Property="Background" Value="{StaticResource Arc.BaseBackgroundBrush}" />
        <Setter Property="Foreground" Value="{StaticResource Arc.PrimaryTextBrush}" />
    </Style>
    
    <!-- =========================
         TYPOGRAPHY (use Classes)
         ========================= -->

    <Style Selector="TextBlock.arc-primary">
        <Setter Property="Foreground" Value="{StaticResource Arc.PrimaryTextBrush}" />
        <Setter Property="FontFamily" Value="Segoe UI" />
        <Setter Property="FontSize" Value="13" />
    </Style>

    <Style Selector="TextBlock.arc-secondary">
        <Setter Property="Foreground" Value="{StaticResource Arc.SecondaryTextBrush}" />
        <Setter Property="FontFamily" Value="Segoe UI" />
        <Setter Property="FontSize" Value="12" />
    </Style>

    <Style Selector="TextBlock.arc-sectionheader">
        <Setter Property="Foreground" Value="{StaticResource Arc.SecondaryTextBrush}" />
        <Setter Property="FontFamily" Value="Segoe UI Semibold" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="TextWrapping" Value="NoWrap" />
        <Setter Property="TextTrimming" Value="CharacterEllipsis" />
    </Style>

    <Style Selector="TextBlock.arc-label">
        <Setter Property="Foreground" Value="{StaticResource Arc.SecondaryTextBrush}" />
        <Setter Property="FontFamily" Value="Segoe UI" />
        <Setter Property="FontSize" Value="11" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="TextWrapping" Value="NoWrap" />
        <Setter Property="TextTrimming" Value="CharacterEllipsis" />
    </Style>

    <Style Selector="TextBlock.arc-value">
        <Setter Property="Foreground" Value="{StaticResource Arc.SecondaryTextBrush}" />
        <Setter Property="FontFamily" Value="Segoe UI" />
        <Setter Property="FontSize" Value="18" />
        <Setter Property="FontWeight" Value="SemiBold" />
    </Style>

    <!-- =========================
         PANELS / LAYOUT
         ========================= -->

    <!-- Side panel: Classes="arc-sidepanel" -->
    <Style Selector="Border.arc-sidepanel">
        <Setter Property="Background" Value="{StaticResource Arc.PanelBackgroundBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource Arc.PanelBorderBrush}" />
        <Setter Property="BorderThickness" Value="0,0,1,0" />
        <Setter Property="Padding" Value="12" />
    </Style>

    <!-- Panel header: Classes="arc-panelheader" -->
    <Style Selector="Border.arc-panelheader">
        <Setter Property="Background" Value="{StaticResource Arc.PanelHeaderBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource Arc.PanelBorderBrush}" />
        <Setter Property="BorderThickness" Value="0,0,0,1" />
        <Setter Property="Padding" Value="8,6" />
    </Style>

    <!-- Card: Classes="arc-card" -->
    <Style Selector="Border.arc-card-base">
        <Setter Property="Background" Value="#0DFFFFFF" /> <Setter Property="BorderBrush" Value="{StaticResource Arc.PanelBorderBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="BoxShadow" Value="0 4 10 0 #40000000" /> <Setter Property="Margin" Value="0,0,0,8" />
    </Style>

    <Style Selector="Border.arc-card-base:pointerover">
        <Setter Property="BorderBrush" Value="{StaticResource Arc.AccentPrimaryBrush}" />
        <Setter Property="Background" Value="#1AFFFFFF" />
    </Style>

    <Style Selector="Border.arc-card-small">
        <Setter Property="Padding" Value="8,4" />
        <Setter Property="Height" Value="48" />
    </Style>

    <Style Selector="Border.arc-card-medium">
        <Setter Property="Padding" Value="12" />
        <Setter Property="MinHeight" Value="110" />
    </Style>

    <Style Selector="Border.arc-card-large">
        <Setter Property="Padding" Value="16" />
        <Setter Property="MinHeight" Value="200" />
        <Setter Property="Background" Value="#15171D" />
        <Setter Property="BorderBrush" Value="{StaticResource Arc.AccentPrimaryMutedBrush}" />
    </Style>
    
    <Style Selector="ListBoxItem:selected Border.arc-card-base">
        <Setter Property="BorderThickness" Value="2" />
        <Setter Property="BorderBrush" Value="{StaticResource Arc.AccentPrimaryBrush}" />
    </Style>
    

    <Style Selector="Border.arc-v-sep">
        <Setter Property="Width" Value="1" />
        <Setter Property="Margin" Value="8,2" />
        <Setter Property="Background" Value="{StaticResource Arc.PanelBorderBrush}" />
    </Style>

    <!-- Map surface: Classes="arc-mapsurface" on a Grid -->
    <Style Selector="Grid.arc-mapsurface">
        <Setter Property="Background" Value="{StaticResource Arc.MapBackgroundBrush}" />
    </Style>

    <!-- Separator: Classes="arc-separator" -->
    <Style Selector="Separator.arc-separator">
        <Setter Property="Margin" Value="0,4,0,4" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Separator">
                    <Border Height="1"
                            Background="{StaticResource Arc.SeparatorBrush}" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

        <!-- =========================
         BUTTONS
         ========================= -->

    <!-- Primary button: Classes="arc-primary" -->
    <Style Selector="Button.arc-primary">
        <Setter Property="Foreground" Value="{StaticResource Arc.BaseBackgroundBrush}" />
        <Setter Property="Background" Value="{StaticResource Arc.AccentPrimaryBrush}" />
        <Setter Property="Padding" Value="14,6" />
        <Setter Property="CornerRadius" Value="0" />
        <Setter Property="FontSize" Value="13" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="Cursor" Value="Hand" />
    </Style>

    <!-- Primary â€“ template states -->
    <Style Selector="Button.arc-primary /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Background" Value="{StaticResource Arc.AccentPrimaryBrush}" />
    </Style>

    <Style Selector="Button.arc-primary:pointerover /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Foreground" Value="{StaticResource Arc.BaseBackgroundBrush}" />
        <Setter Property="Background" Value="{StaticResource Arc.AccentPrimaryHoverBrush}" />
    </Style>

    <Style Selector="Button.arc-primary:pressed /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Foreground" Value="{StaticResource Arc.BaseBackgroundBrush}" />
        <Setter Property="Background" Value="{StaticResource Arc.AccentPrimaryPressedBrush}" />
    </Style>

    <Style Selector="Button.arc-primary:disabled /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Opacity" Value="0.35" />
    </Style>


    <!-- Secondary button: Classes="arc-secondary" -->
    <Style Selector="Button.arc-secondary">
        <Setter Property="Foreground" Value="{StaticResource Arc.BaseBackgroundBrush}" />
        <Setter Property="Background" Value="{StaticResource Arc.AccentSecondaryBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource Arc.AccentSecondaryBrush}" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="CornerRadius" Value="0" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Padding" Value="10,4" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="Cursor" Value="Hand" />
    </Style>

    <Style Selector="Button.arc-secondary /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Foreground" Value="{StaticResource Arc.BaseBackgroundBrush}" />
        <Setter Property="Background" Value="{StaticResource Arc.AccentSecondaryBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource Arc.AccentSecondaryBrush}" />
    </Style>

    <Style Selector="Button.arc-secondary:pointerover /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Foreground" Value="{StaticResource Arc.BaseBackgroundBrush}" />
        <Setter Property="Background" Value="{StaticResource Arc.AccentSecondaryMutedBrush}" />
    </Style>

    <Style Selector="Button.arc-secondary:pressed /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Foreground" Value="{StaticResource Arc.BaseBackgroundBrush}" />
        <Setter Property="Background" Value="{StaticResource Arc.AccentSecondaryPressedBrush}" />
    </Style>

    <Style Selector="Button.arc-secondary:disabled /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Opacity" Value="0.35" />
    </Style>
    
    <!-- Tertiary button: Classes="arc-tertiary" -->
    <Style Selector="Button.arc-tertiary">
        <Setter Property="Foreground" Value="{StaticResource Arc.BaseBackgroundBrush}" />
        <Setter Property="Background" Value="{StaticResource Arc.AccentTertiaryBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource Arc.AccentTertiaryBrush}" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="CornerRadius" Value="0" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Padding" Value="10,4" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="Cursor" Value="Hand" />
    </Style>

    <Style Selector="Button.arc-tertiary /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Foreground" Value="{StaticResource Arc.BaseBackgroundBrush}" />
        <Setter Property="Background" Value="{StaticResource Arc.AccentTertiaryBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource Arc.AccentTertiaryBrush}" />
    </Style>

    <Style Selector="Button.arc-tertiary:pointerover /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Foreground" Value="{StaticResource Arc.BaseBackgroundBrush}" />
        <Setter Property="Background" Value="{StaticResource Arc.AccentTertiaryMutedBrush}" />
    </Style>

    <Style Selector="Button.arc-tertiary:pressed /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Foreground" Value="{StaticResource Arc.BaseBackgroundBrush}" />
        <Setter Property="Background" Value="{StaticResource Arc.AccentTertiaryPressedBrush}" />
    </Style>

    <Style Selector="Button.arc-tertiary:disabled /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Opacity" Value="0.35" />
    </Style>


    <!-- Ghost button: Classes="arc-ghost" -->
    <Style Selector="Button.arc-ghost">
        <Setter Property="Foreground" Value="{StaticResource Arc.SecondaryTextBrush}" />
        <Setter Property="Background" Value="{StaticResource Arc.PanelHeaderBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource Arc.PanelBorderBrush}" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Padding" Value="8,4" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="Cursor" Value="Hand" />
    </Style>

    <Style Selector="Button.arc-ghost /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Background" Value="{StaticResource Arc.PanelHeaderBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource Arc.PanelBorderBrush}" />
    </Style>

    <Style Selector="Button.arc-ghost:pointerover /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Background" Value="{StaticResource Arc.PanelHeaderBrush}" />
    </Style>

    <Style Selector="Button.arc-ghost:pressed /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Background" Value="{StaticResource Arc.PanelBackgroundBrush}" />
    </Style>


    <!-- Error / destructive button: Classes="arc-error" -->
    <Style Selector="Button.arc-error">
        <Setter Property="Foreground" Value="{StaticResource Arc.AccentErrorBrush}" />
        <Setter Property="Background" Value="{StaticResource Arc.AccentErrorMutedBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource Arc.AccentErrorBrush}" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="CornerRadius" Value="0" />
        <Setter Property="Padding" Value="10,4" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Cursor" Value="Hand" />
    </Style>

    <Style Selector="Button.arc-error /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Background" Value="{StaticResource Arc.AccentErrorMutedBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource Arc.AccentErrorBrush}" />
    </Style>

    <Style Selector="Button.arc-error:pointerover /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Foreground" Value="{StaticResource Arc.AccentErrorBrush}" />
        <Setter Property="Background" Value="{StaticResource Arc.AccentErrorHoverBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource Arc.AccentErrorBrush}" />
    </Style>

    <Style Selector="Button.arc-error:pressed /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Background" Value="{StaticResource Arc.AccentErrorPressedBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource Arc.AccentErrorBrush}" />
    </Style>

    <Style Selector="Button.arc-error:disabled /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Opacity" Value="0.35" />
    </Style>

    <!-- Ghost / panel button: Classes="arc-ghost" -->
    <Style Selector="Button.arc-ghost">
        <Setter Property="Foreground" Value="{StaticResource Arc.SecondaryTextBrush}" />
        <Setter Property="Background" Value="{StaticResource Arc.PanelHeaderBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource Arc.PanelBorderBrush}" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="CornerRadius" Value="0" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Padding" Value="8,4" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="Cursor" Value="Hand" />
    </Style>

    <Style Selector="Button.arc-ghost:pointerover">
        <Setter Property="Background" Value="#FF20252E" />
        <Setter Property="Foreground" Value="{StaticResource Arc.PrimaryTextBrush}" />
    </Style>

    <Style Selector="Button.arc-ghost:pressed">
        <Setter Property="Background" Value="#FF171B23" />
    </Style>

    <Style Selector="Button.arc-ghost:disabled">
        <Setter Property="Opacity" Value="0.3" />
    </Style>

    <!-- Icon button: Classes="arc-iconbutton" -->
    <Style Selector="Button.arc-iconbutton">
        <Setter Property="Padding" Value="4" />
        <Setter Property="Width" Value="26" />
        <Setter Property="Height" Value="26" />
        <Setter Property="Background" Value="{StaticResource Arc.PanelHeaderBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource Arc.PanelBorderBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Cursor" Value="Hand" />
    </Style>

    <Style Selector="Button.arc-iconbutton:pointerover">
        <Setter Property="Background" Value="#FF20252E" />
        <Setter Property="Foreground" Value="{StaticResource Arc.PrimaryTextBrush}" />
    </Style>

    <Style Selector="Button.arc-iconbutton:pressed">
        <Setter Property="Background" Value="#FF171B23" />
    </Style>

    <!-- Nav toggle: Classes="arc-navtoggle" -->
    <Style Selector="ToggleButton.arc-navtoggle /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Foreground" Value="{StaticResource Arc.BaseBackgroundColor}" />
        <Setter Property="BorderBrush" Value="{StaticResource Arc.PanelBorderBrush}" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="CornerRadius" Value="0" />
        <Setter Property="Padding" Value="8,4" />
        <Setter Property="HorizontalContentAlignment" Value="Left" />
        <Setter Property="Cursor" Value="Hand" />
    </Style>

    <Style Selector="ToggleButton.arc-navtoggle:pointerover /template/ ContentPresenter#PART_ContentPresenter">
    </Style>

    <Style Selector="ToggleButton.arc-navtoggle:checked /template/ ContentPresenter#PART_ContentPresenter">
    </Style>

    <Style Selector="ToggleButton.arc-navtoggle:disabled /template/ ContentPresenter#PART_ContentPresenter">
    </Style>

    <!-- =========================
         LIST / GRID
         ========================= -->

    <!-- ListBox: Classes="arc-listbox" -->
    <Style Selector="ListBox.arc-listbox">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Foreground" Value="{StaticResource Arc.PrimaryTextBrush}" />
    </Style>

    <!-- ListBoxItem: Classes="arc-listboxitem" -->
    <Style Selector="ListBox.arc-listbox > ListBoxItem">
        <Setter Property="Padding" Value="8,6" />
        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Foreground" Value="{StaticResource Arc.SecondaryTextBrush}" />
    </Style>

    <Style Selector="ListBox.arc-listbox > ListBoxItem:pointerover /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Background" Value="#FF1E242E" />
        <Setter Property="Foreground" Value="{StaticResource Arc.PrimaryTextBrush}" />
    </Style>

    <Style Selector="ListBox.arc-listbox > ListBoxItem:selected /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Background" Value="Transparent" /> 
        <Setter Property="Foreground" Value="{StaticResource Arc.PrimaryTextBrush}" />
    </Style>

    <Style Selector="ListBox.arc-listbox > ListBoxItem:disabled /template/ ContentPresenter#PART_ContentPresenter">
        <Setter Property="Opacity" Value="0.3" />
    </Style>

    <!-- =========================
         INPUTS (TEXTBOX / COMBOBOX)
         ========================= -->

    <!-- TextBox: Classes="arc-input" -->
    <Style Selector="TextBox.arc-input">
        <Setter Property="Foreground" Value="{StaticResource Arc.SecondaryTextBrush}" />
        <Setter Property="Background" Value="{StaticResource Arc.InputBackgroundBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource Arc.InputBorderBrush}" />
        <Setter Property="CornerRadius" Value="0" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Padding" Value="6,4" />
        <Setter Property="FontSize" Value="12" />
    </Style>

    <Style Selector="TextBox.arc-input:focus">
        <Setter Property="BorderBrush" Value="{StaticResource Arc.InputBorderFocusedBrush}" />
    </Style>

    <Style Selector="TextBox.arc-input:disabled">
        <Setter Property="Opacity" Value="0.35" />
    </Style>

    <!-- ComboBox: Classes="arc-combobox"
         (keeps default template, just colors) -->
    <Style Selector="ComboBox.arc-combobox">
        <Setter Property="Foreground" Value="{StaticResource Arc.SecondaryTextBrush}" />
        <Setter Property="Background" Value="{StaticResource Arc.InputBackgroundBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource Arc.InputBorderBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="0" />
        <Setter Property="Padding" Value="4,2" />
        <Setter Property="FontSize" Value="12" />
        <Setter Property="Height" Value="26" />
        <Setter Property="HorizontalContentAlignment" Value="Left" />
    </Style>

    <Style Selector="ComboBox.arc-combobox:pointerover, ComboBox.arc-combobox:focus">
        <Setter Property="BorderBrush" Value="{StaticResource Arc.InputBorderFocusedBrush}" />
    </Style>

    <Style Selector="ComboBox.arc-combobox:disabled">
        <Setter Property="Opacity" Value="0.35" />
    </Style>

    <!-- =========================
     SLIDER / PROGRESS
     ========================= -->

    <!-- Slider: Classes="arc-slider" -->
    <Style Selector="Slider.arc-slider">
        <Setter Property="Foreground" Value="{StaticResource Arc.AccentSecondaryBrush}" />
        <Setter Property="Background" Value="{StaticResource Arc.GridLineBrush}" />
        <Setter Property="Height" Value="18" />
    </Style>

    <!-- ProgressBar: Classes="arc-progress" -->
    <Style Selector="ProgressBar.arc-progress">
        <Setter Property="Height" Value="4" />
        <Setter Property="Foreground" Value="{StaticResource Arc.AccentSecondaryBrush}" />
        <Setter Property="Background" Value="{StaticResource Arc.GridLineBrush}" />
    </Style>

    <!-- =========================
         PILL / BADGE / CHIP
         ========================= -->

    <!-- Base chip: Classes="arc-chip" -->
    <Style Selector="Border.arc-chip">
        <Setter Property="CornerRadius" Value="0" />
        <Setter Property="Padding" Value="6" />
        <Setter Property="Background" Value="#151A23" />
        <Setter Property="BorderThickness" Value="1" />
    </Style>

    <!-- ONLINE badge: Classes="arc-badge-online" -->
    <Style Selector="Border.arc-badge-online">
        <Setter Property="CornerRadius" Value="0" />
        <Setter Property="Padding" Value="6" />
        <Setter Property="BorderBrush" Value="{StaticResource Arc.StatusOnlineBrush}" />
        <Setter Property="Background" Value="{StaticResource Arc.MutedStatusOnlineBrush}" />
        <Setter Property="BorderThickness" Value="1" />
    </Style>

    <!-- WARNING badge: Classes="arc-badge-warning" -->
    <Style Selector="Border.arc-badge-warning">
        <Setter Property="CornerRadius" Value="0" />
        <Setter Property="Padding" Value="6" />
        <Setter Property="BorderBrush" Value="{StaticResource Arc.StatusWarningBrush}" />
        <Setter Property="Background" Value="{StaticResource Arc.MutedStatusWarningBrush}" />
        <Setter Property="BorderThickness" Value="1" />
    </Style>

    <!-- ERROR badge: Classes="arc-badge-error" -->
    <Style Selector="Border.arc-badge-error">
        <Setter Property="CornerRadius" Value="0" />
        <Setter Property="Padding" Value="6" />
        <Setter Property="BorderBrush" Value="{StaticResource Arc.AccentErrorBrush}" />
        <Setter Property="Background" Value="{StaticResource Arc.AccentErrorMutedBrush}" />
        <Setter Property="BorderThickness" Value="1" />
    </Style>

    <Style Selector="ComboBox.arc-combobox-chip">
        <Setter Property="Background" Value="#252830" />
        <Setter Property="BorderBrush" Value="#3A3F4C" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="CornerRadius" Value="0" />
        <Setter Property="Padding" Value="8,2" />
        <Setter Property="Height" Value="24" />
        <Setter Property="FontSize" Value="11" />
        <Setter Property="Foreground" Value="{StaticResource Arc.SecondaryTextBrush}" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
    </Style>

    <Style Selector="ComboBox.arc-combobox-chip:pointerover">
        <Setter Property="BorderBrush" Value="{StaticResource Arc.AccentSecondaryBrush}" />
        <Setter Property="Background" Value="#2E333D" />
    </Style>
    
    <!-- =========================
         TOGGLE SWITCH (ON/OFF)
         ========================= -->

    <!-- ToggleButton: Classes="arc-toggle-switch" -->
    <Style Selector="ToggleButton.arc-toggle-switch">
        <Setter Property="Width" Value="38" />
        <Setter Property="Height" Value="18" />
        <Setter Property="Background" Value="#FF252B37" />
        <Setter Property="BorderBrush" Value="{StaticResource Arc.PanelBorderBrush}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ToggleButton">
                    <Border x:Name="Track"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <Grid>
                            <Border x:Name="Thumb"
                                    Width="8"
                                    Height="12"
                                    Margin="2"
                                    HorizontalAlignment="Left"
                                    Background="{StaticResource Arc.SecondaryTextBrush}" />
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Checked state for switch -->
    <Style Selector="ToggleButton.arc-toggle-switch:checked /template/ Border#Track">
        <Setter Property="Background" Value="{StaticResource Arc.AccentSecondaryBrush}" />
    </Style>

    <Style Selector="ToggleButton.arc-toggle-switch:checked /template/ Border#Thumb">
        <Setter Property="HorizontalAlignment" Value="Right" />
        <Setter Property="Background" Value="{StaticResource Arc.PanelHeaderBrush}" />
    </Style>

    <Style Selector="ToggleButton.arc-toggle-switch:disabled /template/ Border#Track">
        <Setter Property="Opacity" Value="0.35" />
    </Style>

</Styles>
