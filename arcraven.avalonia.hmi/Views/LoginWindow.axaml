<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:Arcraven.Avalonia.HMI.ViewModels"
        x:Class="Arcraven.Avalonia.HMI.Views.LoginWindow"
        x:DataType="vm:LoginViewModel"
        Title="Arcraven - TwinPeek"
        Icon="/Assets/arcraven.ico"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource Arc.BaseBackgroundBrush}">

    <Grid ColumnDefinitions="450, *">
        <Border Grid.Column="0" 
                Background="#0DFFFFFF" 
                BorderBrush="{StaticResource Arc.SeparatorBrush}" 
                BorderThickness="0,0,1,0">
            <DockPanel Margin="48">
                
                <StackPanel DockPanel.Dock="Top" Spacing="24">
                    <StackPanel Orientation="Horizontal" Spacing="16">
                        <Svg Path="/Assets/Icons/arcraven_logo.svg"
                             VerticalAlignment="Center"
                             Height="64"   
                             Stretch="Uniform" />
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="ARCRAVEN" 
                                       FontSize="24" 
                                       FontWeight="Bold"
                                       LetterSpacing="3"/>
                            <TextBlock Text="{DynamicResource Text.IndustrialInterface}" 
                                       FontSize="10"
                                       Opacity="0.5"
                                       LetterSpacing="1"/>
                        </StackPanel>
                    </StackPanel>
                    <Separator Background="{StaticResource Arc.AccentSecondaryBrush}" Opacity="0.2"/>
                </StackPanel>

                <StackPanel DockPanel.Dock="Bottom" Spacing="16">
                    <Grid ColumnDefinitions="*,*">
                        <StackPanel Grid.Column="0" Spacing="2">
                            <TextBlock Text="{DynamicResource Text.BuildVersion}" Classes="arc-caption" FontSize="9" Opacity="0.5"/>
                            <TextBlock Text="{Binding AppVersion}" FontWeight="Medium" FontSize="12"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1" HorizontalAlignment="Right" Spacing="2">
                            <TextBlock Text="{DynamicResource Text.StationId}" Classes="arc-caption" FontSize="9" Opacity="0.5"/>
                            <TextBlock Text="{Binding ProjectNumber}" FontWeight="Medium" FontSize="12"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>

                <StackPanel VerticalAlignment="Center" Spacing="40">
                    <StackPanel Spacing="8">
                        <TextBlock Text="{DynamicResource Text.AuthHeader}" FontSize="22" FontWeight="Light"/>
                        <TextBlock Text="{DynamicResource Text.AuthSubHeader}" FontSize="13" Opacity="0.6"/>
                    </StackPanel>

                    <StackPanel Spacing="24">
                        <Border IsVisible="{Binding HasError}" 
                                Background="{StaticResource Arc.MutedStatusErrorBrush}"  
                                BorderBrush="{StaticResource Arc.StatusErrorBrush}" 
                                BorderThickness="1" 
                                Padding="16">
                            <TextBlock Text="{Binding StatusMessage}" FontSize="12" Foreground="{StaticResource Arc.StatusErrorBrush}"/>
                        </Border>

                        <Button Command="{Binding LoginCommand}"
                                Classes="arc-primary"
                                Height="56"
                                HorizontalAlignment="Stretch">
                            <TextBlock Text="{DynamicResource Text.SignIn}" FontWeight="SemiBold"/>
                        </Button>

                        <StackPanel Orientation="Horizontal" Spacing="8" HorizontalAlignment="Center" Opacity="0.4">
                            <Svg Path="/Assets/Icons/lock.svg" VerticalAlignment="Center" Height="12" Stretch="Uniform" />
                            <TextBlock Text="{DynamicResource Text.EncryptionNotice}" FontSize="10"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </DockPanel>
        </Border>

        <Grid Grid.Column="1" Background="#05FFFFFF">
            <ScrollViewer Margin="60">
                <StackPanel Spacing="30" MaxWidth="800" HorizontalAlignment="Left">
                    <StackPanel Spacing="8">
                        <TextBlock Text="{DynamicResource Text.LicenseNotice}" 
                                   FontSize="12" FontWeight="Bold" 
                                   Foreground="{StaticResource Arc.AccentSecondaryBrush}" 
                                   LetterSpacing="1.5"/>
                        <TextBlock Text="{DynamicResource Text.LicenseTitle}" 
                                   FontSize="18" FontWeight="SemiBold"/>
                        <TextBlock Text="{DynamicResource Text.Copyright}" 
                                   FontSize="12" Opacity="0.5"/>
                    </StackPanel>

                    <Rectangle Height="1" Fill="{StaticResource Arc.SeparatorBrush}" Opacity="0.5"/>

                    <StackPanel Spacing="24">
                        <StackPanel Spacing="5">
                            <TextBlock Text="{DynamicResource Text.OwnershipTitle}" FontWeight="Bold" FontSize="11" Opacity="0.8"/>
                            <TextBlock Text="{DynamicResource Text.OwnershipContent}" 
                                       TextWrapping="Wrap" FontSize="13" Opacity="0.7" LineHeight="20"/>
                        </StackPanel>

                        <StackPanel Spacing="5">
                            <TextBlock Text="{DynamicResource Text.RestrictionsTitle}" FontWeight="Bold" FontSize="11" Opacity="0.8"/>
                            <TextBlock Text="{DynamicResource Text.RestrictionsContent}" 
                                       TextWrapping="Wrap" FontSize="13" Opacity="0.7" LineHeight="20"/>
                        </StackPanel>

                        <StackPanel Spacing="5">
                            <TextBlock Text="{DynamicResource Text.AuditTitle}" FontWeight="Bold" FontSize="11" Opacity="0.8"/>
                            <TextBlock Text="{DynamicResource Text.AuditContent}" 
                                       TextWrapping="Wrap" FontSize="13" Opacity="0.7" LineHeight="20"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>

            <Border VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="40"
                    BorderBrush="{StaticResource Arc.SeparatorBrush}" BorderThickness="1" 
                    Padding="20,15" Background="#12FFFFFF" BoxShadow="0 4 20 0 #40000000">
                <StackPanel Orientation="Horizontal" Spacing="40">
                    <StackPanel>
                        <TextBlock Text="{DynamicResource Text.EnvironmentLabel}" FontSize="9" Opacity="0.5" LetterSpacing="1"/>
                        <TextBlock Text="{DynamicResource Text.ProdCore}" FontSize="12" FontWeight="Bold" Foreground="{StaticResource Arc.StatusOnlineBrush}"/>
                    </StackPanel>
                    <StackPanel>
                        <TextBlock Text="{DynamicResource Text.UtcLabel}" FontSize="9" Opacity="0.5" LetterSpacing="1"/>
                        <TextBlock Text="{Binding UtcTimestamp}" FontSize="12" FontFamily="Consolas"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>